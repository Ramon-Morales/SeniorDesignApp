<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#522d8d" />
            <gradient  android:angle="-90"  android:startColor="#331D58" android:endColor="#865CCB"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#522d8d" />
            <solid  android:color="#522d8d"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#522d8d" />
            <gradient  android:angle="-90"  android:startColor="#865CCB" android:endColor="#522D8D" />
        </shape>
    </item>
</selector>